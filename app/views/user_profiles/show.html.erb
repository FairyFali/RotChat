<style>
	p.padding{
	  padding-bottom:25px;
	}
</style>

<h2 class="padding">用户个人信息</h2>
<div class="col-lg-6">
  <ul class="nav navbar-nav navbar-right">
    <a href="/user_profiles/edit" class="btn btn-info" >编辑</a>
  </ul>
</div>

<p class="padding"></p>
<form class="form-horizontal" role="form">

  <div class="form-group">
    <label class="col-sm-2 control-label">头像：</label>
    <div>
      <%= image_tag current_user.img_url.nil? ? 'user-icon.png' : 'upload/'+current_user.img_url, style: 'width:60px' %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">昵称：</label>
    <div class="col-sm-10">
      <%= current_user.nickname %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">邮箱：</label>
    <div class="col-sm-10">
     <%= current_user.email %>
   </div>
 </div>

 <div class="form-group">
  <label class="col-sm-2 control-label">角色：</label>
  <div class="col-sm-10">
   <%= current_user.role %>
 </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label">Rot龄：</label>
  <div class="col-sm-10">
   <%= (Time.new.year - current_user.created_at.year) %>年
 </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label">生日：</label>
  <div class="col-sm-10">
   <%= current_user.birthdate.strftime("%Y-%m-%d") if !current_user.birthdate.nil? %>
 </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label">性别：</label>
  <div class="col-sm-10">
   <%= current_user.sex == 0? '男' : '女' if !current_user.nil? %>
 </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label">号码：</label>
  <div class="col-sm-10">
   <%= current_user.phone %>
 </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label ">毕业院校：</label>
  <div class="col-sm-10">
   <%= current_user.university %>
 </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label ">家庭住址：</label>
  <div class="col-sm-10">
   <%= current_user.address %>
 </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label ">职业：</label>
  <div class="col-sm-10">
   <%= current_user.profession %>
 </div>
</div>

<div class="form-group">
  <label class="col-sm-2 control-label ">个性签名：</label>
  <div class="col-sm-10">
   <%= current_user.memo %>
 </div>
</div>

</form>