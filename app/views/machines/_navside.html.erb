<div class="panel with-nav-tabs panel-info">
	<div class="panel-heading">
		<a href="#" data-toggle="tab"><i class="fa fa-book"></i>通讯录</a>
	</div>

	<div class="panel-body" id="tab-panel-body" style="height:373px">
		<% @user_machines.each do |m| %>
			<%= link_to machine_path(m), class: 'list-group-item' do %>
				<% if !@machine.nil? && @machine.id == m.id %>
				<!-- <span style="font-weight: bold;color:red;">-></span> -->
				<%= image_tag "headset2.png", class: "img-responsive img-thumbnail", style: "width:20px; background-color:#FF534D;" %>
				<% end %>
				机器人客服：<%= m.name %><%= m.id %>
			<% end %>
		<% end %>
	</div>

	<div class="panel-footer">
		<button type="button" class="btn btn-info btn-block" data-toggle="modal" data-target="#searchMachine">添加机器人</button>
	</div>

</div>

<%= render 'machines/search_machines' %>