<div>通讯录</div>

<% @user_machines.each do |m| %>
	<%= link_to machine_path(m), class: 'list-group-item' do %>
        <% if !@machine.nil? && @machine.id == m.id %>
        	<span style="font-weight: bold;color:red;">-></span>
        <% end %>
        机器人客服：<%= m.name %><%= m.id %>
    <% end %>
<% end %>

<div class="panel-footer">
	<button type="button" class="btn btn-info btn-block" data-toggle="modal" data-target="#myModal">添加机器人</button>
</div>

<%= render 'machines_profiles/search_machines' %>